generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GENDER {
  male
  female
  other
}

model Users {
  id        String   @id @default(uuid())
  user_name String
  last_name String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Post      Post[]
  gender    GENDER?
  age       Int?
  image     String?
}

model Post {
  id          String   @id @default(cuid())
  title       String
  description String
  usersId     String
  Users       Users    @relation(fields: [usersId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  images      String[]
}
