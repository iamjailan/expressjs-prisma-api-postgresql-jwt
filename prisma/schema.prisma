generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(uuid())
  user_name String
  last_name String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum GENDER {
  male
  female
  other
}

model Customers {
  id       String @id @default(uuid())
  name     String
  age      Int
  location String
  gender   GENDER @default(other)
}
